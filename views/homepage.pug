extends base

block content
    include _navbar
    include _addYearForm
    div.pageContentContainer.homepageContentContainer
        div.pageContentCard.yearTableContentCard
            button.addYearButton Add Year
            table.yearTable
                thead
                    tr.headingRow
                        th Year
                        th Turnover
                        th Costs of Sales
                        th Overheads
                        th Operating Income
                tbody
                    each year in years
                        tr.yearRow(id=year._id)
                            td #{year.name}
                            td £#{year.turnover}
                            td £#{year.totalCOS}
                            td £#{year.totalOH}
                            td £#{year.totalOI}
        div.pageContentCard
        div.pageContentCard
        div.pageContentCard
                    

        